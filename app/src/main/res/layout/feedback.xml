<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0px"
        android:background="@color/green"
        android:padding="@dimen/margin_30sp"
        android:text="@string/feedback_title_1"
        android:textSize="@dimen/margin_20sp"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/EditText_Feedback"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0px"
        android:hint="@string/hint_feedback"
        android:gravity="center"/>
    <Button
        android:id="@+id/btn_Sent"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0px"
        android:text="send"
        android:background="@drawable/rounded_border"
        android:backgroundTint="@color/blue_light"
        android:layout_marginBottom="@dimen/margin_10px"
        android:layout_marginRight="@dimen/margin_10px"
        android:layout_marginLeft="@dimen/margin_10px"/>

</LinearLayout>